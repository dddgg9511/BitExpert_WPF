<Window x:Class="_200327.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_200327"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <StackPanel Margin="3" Name="stackPanel1">
            <Button Margin="3" MaxWidth="200" MinWidth="100" Click="Button_Click_1" >Spaning Rows And Column</Button>
            <Button Margin="3" MaxWidth="200" MinWidth="100" Click="Button_Click" >Spliting Window</Button>
            <Button Margin="3" MaxWidth="200" MinWidth="100" Click="Button_Click_2" >Double Split Window</Button>
            <Button Margin="3" MaxWidth="200" MinWidth="100" Click="Button_Click_3" >Shared Size Group</Button>
            <Button Margin="3" MaxWidth="200" MinWidth="100" Click="Button_Click_4" >Localizable Text</Button>
            <Button Margin="3" MaxWidth="200" MinWidth="100" Click="Button_Click_5" >Modular Context</Button>
        </StackPanel>
    </Grid>

</Window>

    