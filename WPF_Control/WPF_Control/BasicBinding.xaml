<UserControl x:Class="WPF_ElementBinding.BasicBinding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_ElementBinding"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="5">
        <Slider Name="sliderFontSize" Margin="3" Minimum="1"
                Maximum="40" Value="10" TickFrequency="1"
                TickPlacement="TopLeft"></Slider>

        <TextBlock Margin="10" Name="lblSampleText"
                   FontSize="{Binding ElementName=sliderFontSize, Path=Value}"
                   Text="Simple Text">
            
        </TextBlock>
    </StackPanel>
                
</UserControl>
